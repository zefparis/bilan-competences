{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@bilan_db_url",
    "NEXTAUTH_SECRET": "@bilan_auth_secret",
    "NEXTAUTH_URL": "https://your-app-url.vercel.app"
  }
}
